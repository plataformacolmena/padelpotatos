rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Reglas para perfiles de usuario
    match /userProfiles/{userId} {
      
      // Los usuarios autenticados pueden leer su propio perfil
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Los usuarios pueden crear su propio perfil (solo en registro)
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Los usuarios pueden actualizar ciertos campos de su propio perfil
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Super Usuarios pueden leer todos los perfiles
      allow read: if request.auth != null && 
                    exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'su';
      
      // Super Usuarios pueden actualizar cualquier perfil
      allow update: if request.auth != null && 
                      exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'su';
      
      // Permitir listado para Super Usuarios
      allow list: if request.auth != null && 
                    exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
                    get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'su';
    }
    
    // Reglas para gestión de partidos
    match /matches/{matchId} {
      // Solo usuarios autenticados pueden leer partidos
      allow read: if request.auth != null;
      
      // Solo Super Usuarios pueden crear partidos
      allow create: if request.auth != null && 
                      exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'su';
      
      // Solo Super Usuarios pueden eliminar partidos
      allow delete: if request.auth != null && 
                      exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'su';
      
      // Super Usuarios pueden actualizar cualquier campo de los partidos
      allow update: if request.auth != null && 
                      exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'su';
      
      // Miembros aprobados pueden unirse/abandonar partidos (solo campo players)
      allow update: if request.auth != null && 
                      exists(/databases/$(database)/documents/userProfiles/$(request.auth.uid)) &&
                      get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.role == 'member' &&
                      get(/databases/$(database)/documents/userProfiles/$(request.auth.uid)).data.status == 'approved' &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['players', 'updatedAt']);
      
      // Permitir listado de partidos para usuarios autenticados
      allow list: if request.auth != null;
    }
    
    // Reglas futuras para otras colecciones del torneo
    // match /tournaments/{tournamentId} {
    //   // Reglas para torneos
    // }
    
    // match /matches/{matchId} {
    //   // Reglas para partidos
    // }
    
    // Denegar todo lo demás por defecto
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

// Reglas para Firebase Authentication
